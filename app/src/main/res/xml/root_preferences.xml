<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:icon="@drawable/ic_baseline_tune_24"
        app:title="@string/settings_dictionary_title">

        <ListPreference
            app:defaultValue="eng"
            app:entries="@array/settings_languages_label"
            app:entryValues="@array/settings_languages"
            app:key="languageTag"
            app:title="@string/settings_language_title"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="settings_clear_history"
            app:summary="@string/settings_clear_history_summary"
            app:title="@string/settings_clear_history_title" />

        <SwitchPreference
            android:summaryOff="@string/settings_offline_summary_off"
            android:summaryOn="@string/settings_offline_summary_on"
            app:defaultValue="true"
            app:key="settings_offline"
            app:switchTextOff="@string/settings_offline_text_off"
            app:switchTextOn="@string/settings_offline_text_on"
            app:title="@string/settings_offline_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:dependency="settings_offline"
        app:icon="@drawable/ic_baseline_download_24"
        app:key="settings_download_category"
        app:title="Downloads">

        <Preference
            app:key="settings_download_entries"
            app:title="@string/downloads_entries_title" />

        <Preference
            app:key="settings_download_sentences"
            app:title="@string/downloads_examples" />
    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_info_24"
        app:title="@string/settings_about_application">
        <Preference
            app:icon="@drawable/ic_copyright"
            app:key="settings_about_entries"
            app:summary="@string/downloads_entries_summary"
            app:title="@string/downloads_entries_info">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/downloads_entries_summary" />
        </Preference>

        <Preference
            app:icon="@drawable/ic_cc"
            app:key="settings_about_sentences"
            app:summary="@string/downloads_examples_summary"
            app:title="@string/downloads_examples_info">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/downloads_examples_summary" />
        </Preference>

        <Preference
            app:key="settings_version"
            app:title="@string/settings_about_version_title" />
    </PreferenceCategory>

</PreferenceScreen>