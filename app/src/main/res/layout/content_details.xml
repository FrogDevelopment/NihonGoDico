<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.frogdevelopment.nihongo.dico.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <TextView
        android:id="@+id/details_kanji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Kanji"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/details_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_kanji"
        android:text="Reading"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/details_lexicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_reading"
        android:text="lexicos"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/details_gloss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_lexicon"
        android:text="kqhfkhuf kh"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/details_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_gloss"
        android:text="infos"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/details_show_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_info"
        android:text="show examples"/>

    <ListView
        android:id="@+id/details_examples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_info"
        android:listSelector="@android:color/transparent"
        android:visibility="gone"/>

</RelativeLayout>
